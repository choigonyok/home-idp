{
	"Policy": {
		"Name": "example-policy",
		"Effect": "Ask/Allow/Deny",
		"Targets": {
			"Deploy": {
				"Namespaces": [
					"default",
					"test"
				],
				"Resources": {
					"CPU": "500m",
					"Memory": "1024Mi",
					"Disk": "200Gi"
        },
				"GVKs": [
					"apps/v1/Deployments",
					"networking.k8s.io/v1/Ingress",
					"/vi/Pod"
				]
			},
			"Secret": {
				"Paths": [
					"/path1/to/secret/*",
					"/path2/to/secret/*"
				]
			}			
		},
		"Actions": [
			"Get",
      "Put",
      "Delete",
      "List"
		]
	}
}